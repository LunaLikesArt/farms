<div class="booyah-box col-xs-10 col-xs-offset-1">

  <br />

  <div class="text-center">
    <h2>Enter Your Farm Details</h2>
  </div>

  <div class="col-xs-10 col-xs-offset-1">

    <br />
    <%= simple_form_for @farm do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <br />
    <br />

    <h4>Amenities</h4>
    <br />

    <div class="amenities">
      <%= f.association :amenities, label: false, as: :check_boxes %>
    </div>

    <%= f.submit 'Save', class: 'btn btn-sm btn-success pull-right' %>
    <% end %>
    <div class="clear">
    </div>
    <br />

  </div>
</div>

<div class="clear">
</div>

