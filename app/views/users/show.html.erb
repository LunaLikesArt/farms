<div class="row">
  <div class="booyah-box col-xs-10 col-xs-offset-1">

    <div class="row">
      <div class="col-xs-10">
        <h1>My Profile </h1>
      </div>

      <div class="col-xs-2">
        <%= image_tag 'flower-large.png', class: 'img-responsive' %>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12">
        <h4><%= @user.email %><h4>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12">
          <h5>Member Since: <%= @user.created_at.strftime("%B %d, %Y") %></h5>
        </div>
      </div>

      <br />
      <br />

      <div class="col-xs-10 col-xs-offset-1">
        <hr>
      </div>

      <div class="row">
        <div class="col-xs-12">

          <h1>My Farm</h1>
          <br />
          <% @user.farms.each do |farm| %>
          <br />

          <div class="row">
            <div class="col-xs-6">
              <h2><%= link_to farm.name, farm_path(farm) %></h2>
            </div>
            <br />
            <div class="col-xs-6 text-right">
              <%= link_to 'Edit Settings', url: '#', class: 'btn btn-primary btn-sm' %>
            </div>
          </div>

          <div class="row">
            <div class="col-xs-6">
              <i><%= farm.address %></i>
              <br />
              <p><%= farm.description %></p>
            </div>
          </div>
          <br />
          <br />
          <% end %>
        </div>
      </div>
    </div>

      <br />
      <br />
